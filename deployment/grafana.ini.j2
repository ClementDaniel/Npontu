[server]
root_url = "http://localhost:3000"  # Adjust if Grafana runs on a different host/port
admin_user = "{{ grafana_admin_user }}"
admin_password = "{{ grafana_admin_password }}"
server.http_port = 3000

[session]
cookie_name = "grafana_sess"
cookie_lifetime = 3600

[auth.basic]
enabled = false

[security]
csrf_token_length = 32

[datasource]
datasources = [
  {
    "name": "Prometheus",
    "type": "prometheus",
    "url": "http://localhost:9090",  # Replace with the actual Prometheus URL
    "access": "proxy",
  },
]

[panels]
title_color = "#333333"

[dashboards]
default_home_dashboard = "/d/monitoring"

[log]
level = "info"
